{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2018",
      "lib": ["es2018"],
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "inlineSources": true,
      "removeComments": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["dist", "node_modules", "**/*.spec.ts", "test/**"]
  }